{% extends 'base.html.twig' %}

{% block title %}Buy Ripple{% endblock %}

{% block body %}
<div class="relative z-10" aria-labelledby="slide-over-title" role="dialog" aria-modal="true">
  <!-- Your existing HTML code goes here -->
